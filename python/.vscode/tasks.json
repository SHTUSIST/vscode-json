{
    "version": "0.1.0",
    // 在Linux和Mac系统中使用"sh".
    "command": "cmd",
    "isShellCommand": true,
    // global args
    // 在Linux和Mac系统中使用"-c"(注意大小写).
    "args": [
        "/C"
    ],
    "showOutput": "always",
    "suppressTaskName": false,
    "tasks": [
        {
            "taskName": "py2",
            // task args
            "args": [
                "${file}"
            ],
        },
        {
            "taskName": "python",
            "args": [
                "${file}"
            ]
        }
    ]
}